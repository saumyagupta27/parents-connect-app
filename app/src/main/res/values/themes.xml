<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParentsConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ButtonPurple">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonPurpleRounded">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:radius">250dp</item>-->
        <item name="background">@drawable/rounded_corners_bg</item>
    </style>

    <style name="ButtonGreenRounded" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/secondary</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="background">@drawable/rounded_corners_bg</item>
    </style>

    <style name="ButtonWhite">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonViewFile">
        <item name="android:backgroundTint">@color/baseTransparent</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonViewFileI">
        <item name="android:backgroundTint">@color/primaryDark</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AuthenticationTitle">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="AuthenticationSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColorHint">@color/accent</item>
        <item name="hintTextColor">@color/accent</item>
        <item name="startIconTint">@color/accent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="ActivityTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accent</item>
<!--        <item name="android:fontFamily">@font/montserrat"</item>-->
    </style>

</resources>