<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp" >

    <TextView
        android:id="@+id/noticeTitleDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/primaryDark"
        android:padding="10dp"
        android:layout_margin="2dp"
        android:fontFamily="@font/montserrat"
        android:backgroundTint="@color/base"
        android:background="@drawable/card_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noticeTextDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Content blah blah blah blah  blah"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:fontFamily="@font/montserrat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/noticeTitleDisplay"/>

    <android.widget.Button
        android:id="@+id/viewAttachedFileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:text="View File"
        android:textColor="@color/white"
        android:backgroundTint="@color/primary"
        android:background="@drawable/rounded_corners_filled_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noticeTextDisplay" />

</androidx.constraintlayout.widget.ConstraintLayout>